<li class="c-accordion-nav__item  js-accordion-nav-item">
  <div class="o-wrapper  o-wrapper--huge  c-accordion-nav__spacer">
    <div class="c-accordion-nav__underline"></div>
  </div>
  <div class="o-wrapper  o-wrapper--huge">
    <div class="c-accordion-nav__clickable-area  js-accordion-nav-opener  u-flex  u-flex--space-between">
      <h2 class="o-heading  c-accordion-nav__heading  u-margin-bottom-none">Releases</h2>
      <div class="c-accordion-nav__status">
        <span class="c-accordion-nav__plus"></span>
      </div>
    </div>
  </div>


  <div class="c-accordion-nav__content  js-accordion-nav-content">
    <div class="c-carousel  js-carousel">
      {% for entry in craft.entries.section('releases') %}
      <div class="c-carousel__slide  js-carousel-slide"{% if entry.backdropImage | length %} style="background-image: url({{ entry.backdropImage.first().getUrl() }});"{% endif %}>
        <div class="o-layout  o-layout--middle  o-layout--flush  o-layout--reverse  c-accordion-nav__layout">
          <div class="o-layout__item  u-1/2@desktop  c-carousel__item">
            {% if entry.media | length %}
              <div class="c-carousel__asset  js-carousel-asset">
                {% for block in entry.media %}
                  {% if block.type == "image" %}
                    <img src="{{ block.asset.first().getUrl() }}" />
                  {% elseif block.type == "youtube" %}
                    <div class="c-video">
                      <iframe src="{{ block.linkUrl }}" width="100%" frameborder="0" allowfullscreen></iframe>
                    </div>
                  {% elseif block.type == "vimeo" %}
                    <div class="c-video">
                      <iframe src="https://player.vimeo.com/video/226199475" width="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
          <div class="o-layout__item  c-accordion-nav__layout-item  c-carousel__item  u-1/2@desktop  js-carousel-right-item">
            {% if entry.body | length %}
            <div class="c-accordion-nav__details  js-accordion-nav-details">
              <div class="c-carousel__controller  u-flex  u-flex--space-between">
                <div class="c-carousel__pagination">{{ loop.index }} / {{ loop.length }}</div>
                <div class="u-flex  u-flex--space-between">
                  <div class="c-carousel__prev  js-carousel-prev">Prev</div>
                  <span class="c-carousel__slash">&frasl;</span>
                  <div class="c-carousel__next  js-carousel-next">Next</div>
                </div>
              </div>
              <h1 class="o-heading  o-heading--bold">{{ entry.title }}</h1>
              <div class="o-copy">
                <span>{{ entry.releasedYear }}</span> &frasl; <span>{{ entry.label }}</span>
              </div>
              <div class="o-copy">{{ entry.body }}</div>

              {% if entry.links | length %}
                {% for block in entry.links %}
                <div class="">
                  <a href="{{ block.linkUrl }}" target="_blank">{{ block.linkText }}</a>
                </div>
                {% endfor %}
              {% endif %}
            </div>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</li>
